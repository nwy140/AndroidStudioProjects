<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!--state_pressed means when clicked-->
    <item android:state_pressed="true">
        <shape>
            <!--Solid is color of wallpaper-->
            <solid android:color="#70c656"/>
            <!-- Stroke means corner-->
            <stroke android:color="#53933f"
                android:width="2dp"
                />
            <corners android:radius="30dp"/>
            <padding android:right="13pt"
                android:left="13pt" android:top="13pt" android:bottom="13pt"/>

        </shape>

    </item>

    <item >
        <shape>
            <!--gradient makes color more shady, useful for adding shading or making rainbows -->
            <gradient android:startColor="#70c656"
                android:endColor="#53933f"/>
            <!--android:endColor="#f9f9f9"-->




            <!-- Stroke means corner-->
            <stroke android:color="#53933f"
                android:width="2dp"
                />
            <corners android:radius="100dp"/>
            <padding android:right="13pt"
                android:left="13pt" android:top="13pt" android:bottom="13pt"
                />

        </shape>

    </item>



</selector>